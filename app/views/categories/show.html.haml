= render partial: 'shared/header'
= render partial: 'shared/breadcrumbs'
.content
  .content__categories
    = link_to image_tag('category.png', class: "content__categories__title")
    %ul
      - @categories.each do |category|
        %li.category__name
          = link_to category.name, category_path(category), class: "add_color"
  .content__articles
    = image_tag('pickup.png', class: "pop")
    .categories__category
      = link_to category_path(@category) do
        = image_tag(@category.image, class: "categories__category__image")
        .categories__category__name
          = @category.name
        .categories__category__content
          = @category.content
    = render partial: 'shared/article', collection: @articles
    = paginate @articles
  .content__subs
    = link_to image_tag('ranking.png', class: "rankings__head")
    = render partial: 'shared/ranking_article', collection: @ranking_articles
    = render partial: 'shared/tags'
= render partial: 'shared/footer'
