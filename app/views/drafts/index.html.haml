%header.drafts-header
  = image_tag('logo.png')
  %h1.drafts-header__title
    Article management
  %ul.drafts-header__groval-nav
.drafts-contents
  .drafts-sub
    %h2.drafts-sub__title links
    %ul
      %li.drafts-sub__link
        = link_to '記事作成画面', new_draft_path
      %li.drafts-sub__link
        = link_to 'ユーザー情報変更', edit_user_path(current_user)
      %li.drafts-sub__link
        = link_to "ログアウト", destroy_user_session_path, method: :delete
      - if admin_user?(current_user)
        %li.drafts-sub__link
          = link_to 'カテゴリー管理画面', categories_path
        %li.drafts-sub__link
          = link_to 'カテゴリー作成画面', new_category_path
        %li.drafts-sub__link
          = link_to 'タグ管理画面', "#"
  .drafts-main
    %ul.drafts__articles
      = render partial: 'drafts/article', collection: @articles
