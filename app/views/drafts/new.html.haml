.draft-article-view
  %header.drafts-header
    = image_tag('logo.png')
    %h1.drafts-header__title
      Draft Area
    %ul.drafts-header__groval-nav
  .draft-article-area
    = form_for @article, url: drafts_path do |f|
      .draft-article-area__label
        = f.label :title, class: "form_label"
      .draft-article-area__title
        = f.text_field :title, class: "form_title", placeholder: "記事のタイトルを28~32文字で入力してください"
      .draft-article-area__label
        = f.label :category_id, class: "form_label"
      .draft-article-area__category
        = f.collection_select :category_id, Category.all, :id, :name
      .draft-article-area__label
        = f.label :description, class: "form_label"
      .draft-article-area__description
        = f.text_area :description, class: "form_description", placeholder: "200~300文字程度で記事の内容をまとめてください"
      .draft-article-area__label
        = f.label :image, class: "form_label"
      .draft-article-area__image
        = f.label :image do
          %p 画像を選択
          = fa_icon 'picture-o', class: "fa-5x"
          = f.file_field :image, class: "file_btn"
      .preview
      .draft-article-area__label
        = f.label :body, class: "form_label"
      .draft-article-area__body
        = f.text_area  :body, class: "form_body", placeholder: "マークダウンを使用して4000字以上で記事執筆を行ってください"
      .draft-article-area__btn
        = f.submit 'SAVE', class: "form_btn"

