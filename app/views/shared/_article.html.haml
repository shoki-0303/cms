%ul
  = link_to article_path(article), class: "article" do
    %li.article__info
      = image_tag(article.image, class: "eye-catch")
      %ul.article__info__content
        %li.article__info__content__category
          = article.category.name
        - article.tags.each do |tag|
          %li.article__info__content__tag
            = "#" + tag.name
        %li.article__info__content__title
          = article.title
        %li.article__info__content__description
          %p.article__info__content__description__text
            = article.description

